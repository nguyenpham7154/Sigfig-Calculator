<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--Shadow-->
    <item>
        <shape android:shape="rectangle" android:top="10dp">
            <gradient
                android:startColor="#CD0F0F0F"
                android:endColor="#740F0F0F"
                android:angle="90"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>
    <!--Main Rectangle-->
    <item android:right="1dp" android:left="1dp" android:top="10dp">
        <shape android:shape="rectangle">
            <solid android:color="#1155CB" />
            <corners android:radius="20dp"/>
        </shape>
    </item>
</layer-list>